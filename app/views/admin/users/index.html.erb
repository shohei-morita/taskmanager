<h1>ユーザー管理画面</h1>

<%= link_to "新規ユーザ登録", new_admin_user_path, class: "btn btn-info" %>

<h3>ユーザー一覧</h3>

<table class="table">
  <thead>
    <tr>
      <th>ユーザ名</th>
      <th>email</th>
      <th>登録タスク数</th>
      <th>権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td><%= t("view.#{user.admin}") %></td>
      <td><%= link_to "タスク閲覧", admin_user_path(user.id), class: "btn btn-success", id: "admin-user-show" %></td>
      <td><%= link_to "ユーザ編集", edit_admin_user_path(user.id), class: "btn btn-success" %></td>
      <td><%= link_to "ユーザ削除", admin_user_path(user.id), method: :delete, data: { confirm: "ユーザを削除しますか？" }, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
