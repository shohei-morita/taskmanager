<h1><%= t('view.user_admin') %></h1>

<%= link_to t('view.new_user_post'), new_admin_user_path, class: "btn btn-info" %>

<h3><%= t('view.user_admin_index') %></h3>

<table class="table">
  <thead>
    <tr>
      <th><%= t('view.user_name') %></th>
      <th><%= t('view.user_email') %></th>
      <th><%= t('view.user_tasks') %></th>
      <th><%= t('view.user_authority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.tasks.count %></td>
      <td><%= t("view.#{user.admin}") %></td>
      <td><%= link_to t('view.user_tasks_show'), admin_user_path(user.id), class: "btn btn-success", id: "admin-user-show" %></td>
      <td><%= link_to t('view.user_edit'), edit_admin_user_path(user.id), class: "btn btn-success" %></td>
      <td><%= link_to t('view.user_destroy'), admin_user_path(user.id), method: :delete, data: { confirm: t('view.confirm')  }, class: "btn btn-danger" %></td>
    </tr>
  </tbody>
  <% end %>
</table>
