<%= link_to "グループ作成", new_group_path, class:"btn btn-primary" %>
<%= link_to "タスク一覧へ", tasks_path, class:"btn btn-info" %>
<table class="table table-striped task-table">
  <thead>
    <tr>
      <th>グループ一覧</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
    <tr>
      <td><%= group.group_name %></td>
      <td><%= link_to t('view.show'), group_path(group.id), class: "btn btn-info" %></td>
      <td><%= link_to t('view.edit'), edit_group_path(group.id), class: "btn btn-info" %></td>
      <td><%= link_to t('view.destroy'), group_path(group.id), method: :delete, data: { confirm: t('view.confirm') }, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </tbody>
<table>
