<%= form_with(model: @label, local: true) do |f| %>
  <% if @label.errors.any? %>
    <h2><%= @label.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @label.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="form-group">
    <%= f.label :"新ラベル" %>
    <%= f.text_field :label, class: "form-control", id: "label_edit" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.submit "post", id: "task_post", class: "btn btn-primary" %>
    <%= link_to "back", labels_path, class: "btn btn-info" %>
  </div>
<% end %>
