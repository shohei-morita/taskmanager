<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |f| %>

  <% if @task.errors.any? %>
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <ul>
    <li><%= f.label :"タスク概要" %></li>
    <li><%= f.text_field :theme, id: "task_theme" %></li>
    <li><%= f.label :"タスク詳細" %></li>
    <li><%= f.text_area :content, id: "task_content"%></li>
    <li><%= f.label :"優先順位" %></li>
    <li><%= f.select :priority, { 低い: 1,　普通: 2, 高い: 1 } %></li>
    <li><%= f.label :"ステータス" %></li>
    <li><%= f.select :status, { 未着手: 1, 着手中: 2, 完了: 3 }, id: "task_status" %></li>
    <li><%= f.label :"期限" %></li>
    <li><%= f.date_field :time_limit, id: "time_limit" %></li>
  </ul>
    <%= f.submit "post", id: "task_post" %>
    <%= link_to "back", tasks_path %>
<% end %>
