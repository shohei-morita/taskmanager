<h1><%= t('view.confirm_title') %></h1>

<p><%= t('view.confirm_text') %></p>

<%= form_with(model: @task, local: true) do |f| %>
  <%= f.hidden_field :theme %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :priority %>
  <%= f.hidden_field :status %>
  <%= f.hidden_field :time_limit %>
  <% @task.labels.each do |label| %>
    <%= f.hidden_field :label_ids, multiple: true, value: label.id %>
  <% end %>

  <table class="table table-task-show">
    <tr>
      <th><%= t('view.theme') %></th>
      <td><%= @task.theme %></td>
    </tr>
    <tr>
      <th><%= t('view.content') %></th>
      <td><%= @task.content %></td>
    </tr>
    <tr>
      <th><%= t('view.priority') %></th>
      <td><%= t("view.#{@task.priority}") %></td>
    </tr>
    <tr>
      <th><%= t('view.status') %></th>
      <td><%= t("view.#{@task.status}") %></td>
    </tr>
    <tr>
      <th><%= t('view.time_limit') %></th>
      <td><%= @task.time_limit %></td>
    </tr>
    <tr>
      <th>ラベル</th>
      <td>
        <% @task.labels.each do |label| %>
         <%= label.label %>
        <% end %>
      </td>
    </tr>
  </table>
　<%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <%= f.submit "back", name: "back", class: "btn btn-info" %>
<% end %>
